void display(const int letter[7][6]) {
  for (int t = 0; t < 6; t++) {
    for (int i = 0; i < 7; i++) {
      digitalWrite(i + 2, letter[i][t]);
      /*Serial.println("column: ");
      Serial.print(i + 1);
      Serial.println();*/
    }
    delay(1000);
  }
  delay(500);
}

